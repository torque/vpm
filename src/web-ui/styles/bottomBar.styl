@require 'mixins'

.bottombar-wrap
	position fixed
	display flex
	flex-direction column-reverse
	width 100%
	height 100px
	bottom 0
	transform translateY(33px)
	transition height 0.25s 0.05s, -webkit-transform 0.25s 0.05s

	&:hover
		height 77px
		transform translateY(0px)

#bottombar
	background-color rgba(0,0,0,0.75)
	display flex
	flex-direction row
	width 100%
	height 27px
	svg
		height 27px
		display block
		margin auto
		fill #CCC

.spacing
	width 100%
