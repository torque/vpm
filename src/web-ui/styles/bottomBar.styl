.bottombar-wrap
	position fixed
	display -webkit-flex
	-webkit-flex-direction column-reverse
	width 100%
	height 80px
	bottom 0
	-webkit-transform translateY(33px)
	transition height 0.25s, -webkit-transform 0.25s 0.05s

	&:hover
		height 60px
		-webkit-transform translateY(0px)

#bottombar
	background-color rgba(0,0,0,0.75)
	display -webkit-flex
	-webkit-flex-direction row
	width 100%
	height 27px
